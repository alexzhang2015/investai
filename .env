# 富途开放平台环境配置
# 开发环境配置 - 使用模拟交易

# 富途连接配置
FUTU_HOST=127.0.0.1
FUTU_PORT=11111
FUTU_TIMEOUT=30
FUTU_RETRY_ATTEMPTS=3

# 交易账户配置（模拟环境可不配置）
FUTU_ACCOUNT_ID=simulated_account
FUTU_TRADE_PASSWORD=simulated_password

# API密钥（模拟环境可不配置）
FUTU_API_KEY=dev_api_key
FUTU_API_SECRET=dev_api_secret

# 交易环境
FUTU_ENVIRONMENT=SIMULATE  # SIMULATE 或 REAL

# 策略配置
STRATEGY_FAST_MA=5
STRATEGY_SLOW_MA=20
STRATEGY_INVESTMENT_PERCENT=0.2
STRATEGY_MIN_INVESTMENT=10000

# 风险控制
RISK_MAX_POSITION_PERCENT=0.2
RISK_MAX_TRADE_AMOUNT=50000
RISK_STOP_LOSS_PERCENT=0.1
RISK_TAKE_PROFIT_PERCENT=0.2

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/futu_trading.log

# 监控配置
DATA_REFRESH_INTERVAL=60
POSITION_CHECK_INTERVAL=300

# 支持的交易市场（逗号分隔）
SUPPORTED_MARKETS=HK,US

# 默认交易市场
DEFAULT_MARKET=HK

# Database
DATABASE_URL=sqlite:///./investai.db
REDIS_URL=redis://localhost:6379/0

# OpenAI API (for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai-proxy.com/v1

# Data Source APIs (example)
TUSHARE_API_TOKEN=your_tushare_token_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
NEWS_API_KEY=your_news_api_key_here

# App Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=True

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256

# Trading Configuration (Optional)
FUTU_API_HOST=127.0.0.1
FUTU_API_PORT=11111
FUTU_API_KEY=your_futu_api_key
FUTU_API_SECRET=your_futu_api_secret
TRADING_ENVIRONMENT=simulate  # simulate or real

# Cache Configuration
CACHE_TTL=3600  # 1 hour
ANALYSIS_CACHE_TTL=1800  # 30 minutes